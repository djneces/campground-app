<% layout('layouts/boilerplate') %> 
<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row w-100">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1517824806704-9040b037703b?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=2100&q=80" alt="" class="card-img-top">
               <div class="card-body">
                   <h5 class="card-title">Login</h5>
                <form action="/login" class="validated-form" novalidate method="POST">
                    <div class="mb-3">
                        <label class="form-label" for="username">Username</label>
                        <input  class="form-control" type="text" id="username" name="username" required autofocus>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input  class="form-control" type="password" id="password" name="password" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <button class="btn btn-success btn-block w-100">Login</button>
                </form>
               </div>
            </div>
        </div>
    </div>
</div>
